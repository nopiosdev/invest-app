@using Nop.Core
@model CustomerInfoModel
@inject Nop.Core.IWebHelper webHelper
@{
    Layout = "_CustomLayout";
}


<div class="page customer-stock-page">
    <div class="custom-tabs-wrapper">
        <div class="tabs-header">
            <h2 class="tabs-heading">@T("Account.Transactions")</h2>
            <div class="tabs-navigation">
                <ul>
                    <li class="active">
                        <a href="javascript:void(0)" data-id="WithdrawTab">@T("Account.Withdraw")</a>
                    </li>
                    <li>
                        <a href="javascript:void(0)" data-id="DepositTab">@T("Account.Deposit")</a>
                    </li>  
                </ul>
            </div>
        </div>
        <div class="tabs-content">

            <div id="WithdrawTab" class="tab active">
                <div class="datatable-grid ">
                    <table id="WithdrawTable" class="table datatable stock-datatable" style="width:100%">
                        <thead>
                            <tr>
                                <th>Withdrawl Method</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th> 
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>
            <div id="DepositTab" class="tab">
                <div class="datatable-grid ">
                    <table id="DepositTable" class="table datatable stock-datatable" style="width:100%">
                        <thead>
                            <tr>
                                <th>Withdrawl Method</th>
                                <th>Amount</th>
                                <th>Status</th>
                                <th>Date</th> 
                            </tr>
                        </thead>
                    </table>
                </div>
            </div>

        </div>
    </div>
</div>


<script asp-location="Footer"> 
    
    function WithdrawTable(){
        var table = $('#WithdrawTable').DataTable({
            "ajax": {
                "url": "@Url.RouteUrl("GetTransactionData", new {transactionType="debit"})",
                "dataType": "json",
                "contentType": "application/json; charset=utf-8",
                "dataSrc": function (resp) {
                    return resp;

                },
                error: function () {
                    alert("Something went wrong!");
                }
            },
            "searching": true,
            "language": {
                "searchPlaceholder": "Search by TAS Project Number"
            },
            "paging": true,
            "info": false,
            "initComplete": function (settings, json) {
                colorNegativeValue("#billingTransGrid");
            },
            "order": [],
            "aoColumns": [
                {
                    "mData": "WithdrawlMethod",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data != "" ? data:"-";
                    }
                },
                {
                    "mData": "Amount",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data;
                    }
                }, 
                {
                    "mData": "Status",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data;
                    }
                },
                {
                    "mData": "Date",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data;
                    }
                },
            ],
            initComplete: function () {
                
            }
        });
    }

    function DepositTable(){
        var table = $('#DepositTable').DataTable({
            "ajax": {
                "url": "@Url.RouteUrl("GetTransactionData", new {transactionType="credit"})",
                "dataType": "json",
                "contentType": "application/json; charset=utf-8",
                "dataSrc": function (resp) {
                    return resp;

                },
                error: function () {
                    alert("Something went wrong!");
                }
            },
            "searching": true,
            "language": {
                "searchPlaceholder": "Search by TAS Project Number"
            },
            "paging": true,
            "info": false,
            "initComplete": function (settings, json) {
                colorNegativeValue("#billingTransGrid");
            },
            "order": [],
            "aoColumns": [
                {
                    "mData": "WithdrawlMethod",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data != "" ? data:"-";
                    }
                },
                {
                    "mData": "Amount",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data;
                    }
                }, 
                {
                    "mData": "Status",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data;
                    }
                },
                {
                    "mData": "Date",
                    "className": "text-start",
                    render: function (data, type, row) {
                        return data;
                    }
                },
            ],
            initComplete: function () {
                
            }
        });
    }

    $(document).ready(function(){
        WithdrawTable();
        DepositTable();
    });

</script>

