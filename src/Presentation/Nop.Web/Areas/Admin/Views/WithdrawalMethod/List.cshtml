@model WithdrawalMethodSearchModel
@{
    //page title
    ViewBag.PageTitle = T("Admin.Customers.Transactions.WithdrawalMethod").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Withdrawal Method");
}

@{
    const string hideSearchBlockAttributeName = "WithdrawalMethodPage.HideSearchBlock";
    var hideSearchBlock = await genericAttributeService.GetAttributeAsync<bool>(await workContext.GetCurrentCustomerAsync(), hideSearchBlockAttributeName);
}

<div class="content-header clearfix">
    <h1 class="float-left">
        @T("Admin.Customers.Transactions.WithdrawalMethod")
    </h1>
    <div class="float-right">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus-square"></i>
            @T("Admin.Common.AddNew")
        </a>
    </div>
</div>

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="cards-group">
                <div class="card card-default card-search">
                    <div class="card-body">
                        <div class="row search-row @(!hideSearchBlock ? "opened" : "")" data-hideAttribute="@hideSearchBlockAttributeName">
                            <div class="search-text">@T("Admin.Common.Search")</div>
                            <div class="icon-search"><i class="fas fa-search" aria-hidden="true"></i></div>
                            <div class="icon-collapse"><i class="far fa-angle-@(!hideSearchBlock ? "up" : "down")" aria-hidden="true"></i></div>
                        </div>

                        <div class="search-body @(hideSearchBlock ? "closed" : "")">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="Name" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-editor asp-for="Name" />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group row">
                                        <div class="col-md-4">
                                            <nop-label asp-for="WalletTypeId" />
                                        </div>
                                        <div class="col-md-8">
                                            <nop-select asp-for="WalletTypeId" asp-items="Model.AvailableWalletTypes" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="text-center col-12">
                                    <button type="button" id="search-withdrawal-method" class="btn btn-primary btn-search">
                                        <i class="fas fa-search"></i>
                                        @T("Admin.Common.Search")
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card card-default">
                    <div class="card-body">
                        @await Html.PartialAsync("Table", new DataTablesModel
                        {
                            Name = "withdrawal-method-grid",
                            UrlRead = new DataUrl("List", "WithdrawalMethod", null),
                            SearchButtonId = "search-withdrawal-method",
                            Length = Model.PageSize,
                            LengthMenu = Model.AvailablePageSizes,
                            Filters = new List<FilterParameter>
                            {
                                new FilterParameter(nameof(Model.WalletTypeId)),
                                new FilterParameter(nameof(Model.Name)),
                            },
                            ColumnCollection = new List<ColumnProperty>
                            {
                                new ColumnProperty(nameof(WithdrawalMethodModel.Name))
                            {
                            Title = T("Admin.WithdrawalMethod.Name").Text,
                            },
                                new ColumnProperty(nameof(WithdrawalMethodModel.TypeString))
                            {
                            Title = T("Admin.WithdrawalMethod.TypeId").Text,
                            },
                                new ColumnProperty(nameof(WithdrawalMethodModel.IsEnabled))
                            {
                                Title = T("Admin.WithdrawalMethod.IsEnabled").Text,
                                ClassName = NopColumnClassDefaults.CenterAll,
                                Render = new RenderBoolean()
                            },
                            new ColumnProperty(nameof(WithdrawalMethodModel.Id))
                            {
                                Title = T("Admin.Common.Edit").Text,
                                Width = "50",
                                ClassName =  NopColumnClassDefaults.Button,
                                Render = new RenderButtonEdit(new DataUrl("Edit"))
                            }
                       }
                       })

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>