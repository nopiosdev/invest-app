@model WithdrawalMethodModel

<div class="card-body">
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="Name" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="Name" />
            <span asp-validation-for="Name"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="TypeId" />
        </div>
        <div class="col-md-9">
            <nop-select asp-for="TypeId" asp-items="Model.AvailableWalletTypes" />
            <span asp-validation-for="TypeId"></span>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-3">
            <nop-label asp-for="IsEnabled" />
        </div>
        <div class="col-md-9">
            <nop-editor asp-for="IsEnabled" />
            <span asp-validation-for="IsEnabled "></span>
        </div>
    </div>
</div>