@using Nop.Core.Domain.Transaction;
@model TransactionModel

@{
    const string hideInfoBlockAttributeName = "TransactionPage.HideInfoBlock";
    var customer = await workContext.GetCurrentCustomerAsync();
    var hideInfoBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideInfoBlockAttributeName);

    const string hideDisplayBlockAttributeName = "TransactionPage.HideDisplayBlock";
    var hideDisplayBlock = await genericAttributeService.GetAttributeAsync<bool>(customer, hideDisplayBlockAttributeName, defaultValue: true);
}

<div asp-validation-summary="All"></div>
<input asp-for="Id" type="hidden" />

<section class="content">
    <div class="container-fluid">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-12 clearfix">
                    <div class="float-left">
                        @await Component.InvokeAsync(typeof(SettingModeViewComponent), new { modeName = "transaction-advanced-mode" })
                    </div>
                </div>
            </div>

            <nop-cards id="transaction-cards">
                <nop-card asp-name="transaction-info" asp-icon="fas fa-info" asp-title="@T("Admin.Customers.Transactions.Info")" asp-hide-block-attribute-name="@hideInfoBlockAttributeName" asp-hide="@hideInfoBlock" asp-advanced="false">@await Html.PartialAsync("_CreateOrUpdate.Info", Model)</nop-card>
                @if (Model.Id > 0 && Model.TransactionTypeId.Equals((int)TransactionType.Debit))
                {
                    <nop-card asp-name="withdrawal-method-info" asp-icon="fas fa-info" asp-title="@T("Admin.Customers.WithdrawalMethod.Info")" asp-hide-block-attribute-name="@hideDisplayBlockAttributeName" asp-hide="@hideDisplayBlock" asp-advanced="false">@await Html.PartialAsync("_WithdrawalMethod.Info.cshtml", Model)</nop-card>
                }
            </nop-cards>
        </div>
    </div>
</section>