@model ContactUsModel
@{
    Layout = "_Root.Head";

    //title
    NopHtml.AddTitleParts(T("PageTitle.ContactUs").Text);
    //page class
    NopHtml.AppendPageCssClassParts("html-contact-page");
}

 @await Component.InvokeAsync(typeof(AdminHeaderLinksViewComponent))

<div class="page contact-page">
    <div class="user-layout p-0">
        <div class="row contact-wrapper">
            <div class="contact-image col-12 col-md-10 col-lg-8 col-xl-10 d-none d-sm-none d-md-none d-lg-block d-xl-block col-12 col-md-10 col-lg-8 col-xl-10 p-0"></div>
            <div class="col-12 col-md-12 col-lg-6 col-xl-6 col-sm-12 col-md-12 col-lg-6 col-xl-6 p-0">
                <div class="container innerbody p-4">
                    @* <div class="page-title">
                        <h2 class="heading">@T("PageTitle.ContactUs")</h2>
                    </div> *@

                    @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.ContactUsTop, additionalData = Model })
                    @if (Model.SuccessfullySent)
                    {
                        <div class="container">
                            <div class="result">
                                @Model.Result
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="returning-wrapper fieldset">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="title">
                                            <h4>Send Us A Message</h4>
                                        </div>
                                        <form asp-route="ContactUs" method="post">
                                            <div asp-validation-summary="ModelOnly" class="message-error"></div>
                                            <div class="form-fields">
                                                <div class="row">
                                                    <div class="inputs col-6 col-md-6 col-lg-5 col-xl-6 col-sm-12 col-md-6 col-lg-5 col-xl-6">
                                                        <label asp-for="FullName" asp-postfix=":"></label>
                                                        <nop-required />
                                                        <input asp-for="FullName" placeholder="@T("ContactUs.FullName.Hint")" class="fullname" />
                                                        <span asp-validation-for="FullName"></span>
                                                    </div>
                                                    <div class="inputs col-6 col-md-6 col-lg-5 col-xl-6 col-sm-12 col-md-6 col-lg-5 col-xl-6">
                                                        <label asp-for="PhoneNumber" asp-postfix=":"></label>
                                                        <nop-required />
                                                        <input asp-for="PhoneNumber" placeholder="@T("ContactUs.PhoneNumber.Hint")" class="phone-number" />
                                                        <span asp-validation-for="Email"></span>
                                                    </div>
                                                </div>
                                                <div class="inputs">
                                                    <label asp-for="Email" asp-postfix=":"></label>
                                                    <nop-required />
                                                    <input asp-for="Email" placeholder="@T("ContactUs.Email.Hint")" class="email" />
                                                    <span asp-validation-for="Email"></span>
                                                </div>
                                                @if (Model.SubjectEnabled)
                                                {
                                                    <div class="inputs">
                                                        <label asp-for="Subject" asp-postfix=":"></label>
                                                        <nop-required />
                                                        <input asp-for="Subject" placeholder="@T("ContactUs.Subject.Hint")" class="subject" />
                                                        <span asp-validation-for="Subject"></span>
                                                    </div>
                                                }
                                                <div class="inputs">
                                                    <label asp-for="Enquiry" asp-postfix=":"></label>
                                                <nop-required />
                                                    <textarea asp-for="Enquiry" placeholder="@T("ContactUs.Enquiry.Hint")" class="enquiry"></textarea>
                                                    <span asp-validation-for="Enquiry"></span>
                                                </div>
                                                @if (Model.DisplayCaptcha)
                                                {
                                                    <nop-captcha />
                                                }
                                            </div>
                                            <div class="buttons text-end mt-3">
                                                <button type="submit" name="send-email" class="button-1 contact-us-button log-btn">@T("ContactUs.Button")</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                    @await Component.InvokeAsync(typeof(WidgetViewComponent), new { widgetZone = PublicWidgetZones.ContactUsBottom, additionalData = Model })

                    <div class="page-body mt-4">                  
                        <div class="row">
                            <div class="col-sm-12 col-md-12 col-xl-12">
                                <div class="title">
                                    <h4>Other Ways to Contact</h4>
                                </div>
                                <div class="invest-cards-group">
                                    <div class="invest-card border w-100 p-12">
                                        <div class="invest-wrapper">
                                            <div class="other-ways">
                                                <div class="d-flex mb-2">
                                                    <span class="icon-size"><i class="far fa-hand-pointer fa-rotate-90"></i></span>
                                                    <span class="d-flex align-items-center social-info">@Model.CompanyAddress</span>
                                                </div>
                                                <div class="d-flex mb-2">
                                                    <span class="icon-size"><i class="fa-solid fa-envelope"></i></span>
                                                    <span class="d-flex align-items-center social-info">@Model.StoreEmail</span>
                                                </div>
                                                <div class="d-flex mb-2">
                                                    <span class="icon-size"><i class="fa-solid fa-phone"></i></span>
                                                    <span class="d-flex align-items-center social-info">@Model.CompanyPhoneNumber</span>
                                                </div>
                                            </div>
                                            <div class="social">
                                                <a href="@Model.TwitterLink"><i class="fa-brands fa-twitter"></i></a>
                                                <a href="@Model.FacebookLink"><i class="fa-brands fa-facebook-f"></i></a>
                                                <a href="@Model.LinkedinLink"><i class="fa-brands fa-linkedin-in"></i></a>
                                                <a href="@Model.TelegramLink"><i class="fa-brands fa-telegram"></i></a>
                                                <a href="@Model.DiscordLink"><i class="fa-brands fa-discord"></i></a>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="invest-cards-group d-flex flex-wrap gap-2 w-100 mt-3">
                                    <div class="invest-card border w-100">
                                        <div class="invest-wrapper">
                                            <div class="custom-faq-wrapper">
                                                <div class="faq-info">
                                                    <a href="#"><span><i class="fa-regular fa-circle-question"></i></span>Visit Our FAQ Page</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                @await Component.InvokeAsync(typeof(TopicBlockViewComponent), new { systemName = "ContactUs" })
                            </div>
                        </div>
                    </div>
                </div>
                <div class="copyright">
                    <p>
                        Copyright © @DateTime.Now.Year.ToString()
                    </p>
                </div>

                    <div class="footer-links ">
                    <a class="reg-btn" href="/about-us">About</a>|
                    <a class="reg-btn" href="@Url.RouteUrl("Homepage")">Home</a>|
                    <a class="reg-btn" href="#">Help</a>
                </div>
            </div>
        </div>
    </div>
</div>
