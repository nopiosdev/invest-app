@using Nop.Core.Domain.Catalog
@using Nop.Services.Helpers

@inject CatalogSettings catalogSettings
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper

@{
    Layout ="";
    var themeName = await themeContext.GetWorkingThemeNameAsync();
    var supportRtl = await Html.ShouldUseRtlThemeAsync();

    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/theme.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/responsive.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/custom.css");


    //add main CSS file
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles{(supportRtl ? ".rtl" : "")}.css");


    //datatable
    NopHtml.AppendCssFileParts($"~/Themes/InvestApp/Content/tas_datatable/scroller.dataTables.min.css");
    NopHtml.AppendCssFileParts($"~/Themes/InvestApp/Content/tas_datatable/rowGroup.dataTables.css");
    NopHtml.AppendCssFileParts($"~/Themes/InvestApp/Content/tas_datatable/dataTables.bootstrap5.min.css"); 

    NopHtml.AddScriptParts(ResourceLocation.Footer, $"~/Themes/InvestApp/Content/tas_datatable/jquery.dataTables.min.js");
    NopHtml.AddScriptParts(ResourceLocation.Footer, $"~/Themes/InvestApp/Content/tas_datatable/dataTables.bootstrap5.min.js");
    NopHtml.AddScriptParts(ResourceLocation.Footer, $"~/Themes/InvestApp/Content/tas_datatable/dataTables.rowGroup.js");
    NopHtml.AddScriptParts(ResourceLocation.Footer, $"~/Themes/InvestApp/Content/tas_datatable/dataTables.scroller.min.js");
    

    //add font-awesome file
    NopHtml.AppendCssFileParts($"~/Themes/InvestApp/Content/Fonts/font-awesome-6.4.2.css");
    NopHtml.AddScriptParts(ResourceLocation.Footer, $"~/Themes/InvestApp/Content/Fonts/font-awesome-6.4.2.js");

    //add bootstrap file
    NopHtml.AppendCssFileParts($"~/Themes/InvestApp/Content/Bootstrap/bootstrap.min-5.2.3.css");
    NopHtml.AddScriptParts(ResourceLocation.Footer, $"~/Themes/InvestApp/Content/Bootstrap/bootstrap.min-5.2.3.js");

    NopHtml.AddScriptParts(ResourceLocation.Footer,$"~/Themes/{themeName}/Content/js/script.js");
    
    
    //add swiper css file
    if (catalogSettings.DisplayAllPicturesOnCatalogPages)
    {
        NopHtml.AppendCssFileParts("~/lib_npm/swiper/swiper-bundle.min.css");
    }

    //add jQuery UI css file
    NopHtml.AppendCssFileParts("~/lib_npm/jquery-ui-dist/jquery-ui.min.css");


}