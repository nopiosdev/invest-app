@model TransactionModel

@{
    //page title
    ViewBag.PageTitle = T("Admin.Customers.Transactions.AddNew").Text;
    //active menu item (system name)
    NopHtml.SetActiveMenuItemSystemName("Transactions");
}

<form asp-controller="Transaction" asp-action="Create" method="post">
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Customers.Transactions.AddNew")
            <small>
                <i class="fas fa-arrow-circle-left"></i>
                <a asp-controller="Customer" asp-action="Edit" asp-route-id="@Model.CustomerId">@T("Admin.Customers.BackToCustomer")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn btn-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
        </div>
    </div>
    @await Html.PartialAsync("_CreateOrUpdate", Model)
</form>